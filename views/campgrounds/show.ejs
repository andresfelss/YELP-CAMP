<% layout('layouts/boilerplate') %> 

<h1> Campground <%= camp.title %> </h1>
<h2> <%= camp.location %> </h2>
<img src="<%= camp.image %> " alt="">
<h3>Price: <%= camp.price %> </h3>
<p><%= camp.description %> </p>
<footer>
    <a href="/api/campgrounds">All Campgrounds</a>
    <a href="/api/campgrounds/<%= camp._id %>/edit ">Edit</a>
    <form action="/api/campgrounds/<%= camp._id %>?_method=DELETE" method="post">
        <button>DELETE CAMPGROUND</button>
    </form>
</footer>

