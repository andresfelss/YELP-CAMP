<% layout('layouts/boilerplate') %> 

<h1>Register</h1>
<form action="/api/users/register" method="post" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username"> Username </label>
        <input type="text" name="user[username]" id="username" class="form-control" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email"> Email </label>
        <input type="email" name="user[email]" id="email" class="form-control" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password"> Password </label>
        <input type="password" name="user[password]" id="password" class="form-control" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
    <button class="btn btn-success">Register</button>
</form>